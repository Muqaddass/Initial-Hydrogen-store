# Shopify Storefront API Configuration
# Copy this file to .env and fill in your credentials

# Your Shopify store domain (found in your store URL)
# Example: u9khbc-vj.myshopify.com
PUBLIC_STORE_DOMAIN="u9khbc-vj.myshopify.com"

# Your Storefront API access token
# Get this from:
# Option 1: Hydrogen app from Shopify App Store (Settings > Apps > Hydrogen)
# Option 2: dev.shopify.com (create app and install to store)
PUBLIC_STOREFRONT_API_TOKEN="your-storefront-api-token-here"

# Storefront API version
PUBLIC_STOREFRONT_API_VERSION="2024-01"

# Session secret (can be any random string)
SESSION_SECRET="foobar-change-me-in-production"

